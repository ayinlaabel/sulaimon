extend dashboard

block content
    link(rel="stylesheet", href="/stylesheets/patientview.css")

    .row.patient
        each user in users
           .col-md-4
                .card(style='width: 18rem;')
                    img.card-img-top(src='...', alt='...')
                    .card-body
                        h5.card-title #{ user.name }
                        p.card-text
                            | Some quick example text to build on the card title and make up the bulk of the card&apos;s content.
                        a.btn.btn-primary(href='#') Go somewhere
    




    #editProfile.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLongTitle.modal-title Edit Profile
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    form(action='/doctor/'+user._id, method='POST')
                        .form-group
                            .flex-nowrap.form-group
                                label User ID
                                input.form-control(type='text', name='name', placeholder='Fullname' value= user._id disabled)
                        .form-group
                            .flex-nowrap.form-group
                                label Username
                                input.form-control(type='text', name='username', placeholder='Fullname' value= user.username disabled)
                        .form-group
                            .flex-nowrap.form-group
                                .input-group-prepend
                                    span#addon-wrapping.input-group-text
                                        i.fa.fa-user
                                    input.form-control(type='text', name='name', placeholder='Fullname' value= user.name)
                        .form-group
                            .flex-nowrap.form-group
                                .input-group-prepend
                                    span#addon-wrapping.input-group-text
                                        i.fa.fa-envelope
                                    input.form-control(type='text', name='email', placeholder='Fullname' value= user.email)
                        .form-group
                            .flex-nowrap.form-group
                                .input-group-prepend
                                    span#addon-wrapping.input-group-text
                                        i.fa.fa-calendar
                                    input.form-control(type='date', name='dob', placeholder='Fullname' value= user.dob)
                        button.btn.btn-primary(type='submit') Submit

                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    //- button.btn.btn-primary(type='button') Save changes

    #inviteSomeone.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLongTitle.modal-title Invite A Friend / Patient
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    form(action='/users/appointment', method='POST')
                        .form-group
                            .flex-nowrap.form-group
                                label User ID
                                input.form-control(type='text', name='', placeholder='Email (example@example.com) / Telephone(+233 345 345 3443)')
                        
                        button.btn.btn-primary(type='submit') Submit

                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    //- button.btn.btn-primary(type='button') Save changes
                
